<body>
    <% include ../partials/commons.ejs %> <% include ../partials/header.ejs %>
    <!-- Page Content -->
  
    <section class="section gray-bg py-5" style="min-height: 500px">
      <div class="container">
        <a href="../users/signout" class="btn btn-dark" style="float: right">
          Sign Out
        </a>
        <h3>Business Contact List</h3>
  
        <div class="table-responsive" style="margin-top: 50px">
          <table class="table table-bordered table-striped table-hover">
            <!-- Header Row-->
            <tr>
              <th class="text-center">Contact Name</th>
              <th class="text-center">Contact Number</th>
              <th class="text-center">Email Address</th>
              <th class="text-center" colspan="2">Actions</th>
            </tr>
  
            <!-- Repeatable Template Row -->
  
            <% for(let count = 0; count < ContactList.length; count++) { %>
            <tr>
              <td class="text-center"><%= ContactList[count].contactName %></td>
              <td class="text-center"><%= ContactList[count].contactNumber %></td>
              <td class="text-center"><%= ContactList[count].contactEmail %></td>
  
              <td class="text-center">
                <a
                  href="/secure/edit/<%= ContactList[count]._id %>"
                  class="btn btn-primary btn-sm"
                >
                  <i class="fas fa-pencil-alt"></i
                ></a>
              </td>
              <td class="text-center">
                <a
                  href="/secure/delete/<%= ContactList[count]._id %>"
                  class="btn btn-danger btn-sm"
                >
                  <i class="fas fa-trash-alt"></i
                ></a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </section>
  
    <% include ../partials/footer.ejs %>
  </body>
  <script>
    document.getElementById("m-signin-btn").style.visibility = "hidden";
  </script>
  